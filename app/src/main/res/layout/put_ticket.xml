<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PutTicket">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/tvIdDetailsPut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:foregroundTint="#012B03"
            android:textSize="34sp"
            android:textStyle="bold"
            android:text="id" />

        <TextView
            android:id="@+id/tvDateDetilsPut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:foregroundTint="#012B03"
            android:textSize="34sp"
            android:textStyle="bold"
            android:text="Date" />

        <TextView
            android:id="@+id/tvVersionPut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:foregroundTint="#012B03"
            android:text="version"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalAmountPut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:foregroundTint="#012B03"
            android:text="Total"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTotalPut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:foregroundTint="#012B03"
            android:hint="Indique el nuevo precio: "
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnUpdatePut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:foregroundTint="#012B03"
            android:textSize="34sp"
            android:textStyle="bold"
            android:backgroundTint="@color/black"
            android:text="Actualizar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>